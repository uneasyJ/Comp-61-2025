temperature = int(input('How many degrees is it outside today?: '))
budget = float(input('What is the budget for today?: '))
weatherCondition = input('Is the weather condition sunny, rainy, or cloudy?: ').lower()

if(weatherCondition == "sunny"):
    if (temperature > 75 and budget>20.00):
        print('Go to the beach!')
    elif(weatherCondition=='sunny' and temperature > 75 and budget<20.00):
        print( 'Have a picnic in the park.')

elif(weatherCondition=='rainy'):
    if (budget>15.00):
        print('Visit a museum.')
    elif(weatherCondition=='rainy'):
        print('Stay in and watch a movie at home')

elif(weatherCondition=='cloudy'or temperature<60):
    print('Go to a coffee shop and enjoy a warm drink')